<script>
  function showCustomerList() {
    var customerListContainer = document.getElementById("customerListContainer");
    var showCustomerListBtn = document.getElementById("showCustomerListBtn");

    if (customerListContainer.style.display === "none") {
      customerListContainer.style.display = "block";
      showCustomerListBtn.textContent = "Hide Customer List";
    } else {
      customerListContainer.style.display = "none";
      showCustomerListBtn.textContent = "Show Customer List";
    }
  }
</script>